{
  "name": "electron-deezer",
  "homepage": "https://github.com/gabryel8818",
  "version": "0.1.5",
  "description": "Electron deezer app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-deb": "electron-builder --linux deb",
    "build-pacman": "electron-builder --linux pacman"
  },
  "repository": "",
  "keywords": [
    "Electron",
    "Deezer"
  ],
  "author": {
    "name": "Gabriel Melo",
    "email": "gabriel_melo88@hotmail.com"
  },
  "license": "MIT",
  "build": {
    "productName": "Deezer",
    "directories": {
      "buildResources": "build"
    },
    "linux": {
      "target": [
        "pacman",
        "deb"
      ],
      "icon": "build/icon.icns"
    },
    "files": [
      "**/*",
      "assets/"
    ]
  },
  "devDependencies": {
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13"
  }
}
